<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige">

    <Button
        android:id="@+id/précèdent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="précèdent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/suivant"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/water_splash"
        app:layout_constraintVertical_bias="0.976" />

    <Button
        android:id="@+id/acceuil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="acceuil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/water_splash"
        app:layout_constraintVertical_bias="0.976" />

    <ImageView
        android:id="@+id/pompes_spider"
        android:layout_width="143dp"
        android:layout_height="133dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/pompes_spiderman"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_pompes_spider"
        android:layout_width="226dp"
        android:layout_height="129dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="12dp"
        android:text="Placez vous en position de pompes standards, lorsque vous relevez le torse, fléchissez et relevez une jambe sur le côté. Retournez à votre position initiale et répétez l’exercice de l’autre côté . Pensez à bien garder le corps dans une ligne."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/pompes_rotation"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/pompes_rotation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pompes_spider" />

    <TextView
        android:id="@+id/text_pompes_rotation"
        android:layout_width="233dp"
        android:layout_height="149dp"
        android:layout_marginTop="24dp"
        android:text="Commencez comme pour faire des pompes. Effectuez une descente et au moment où vous remontez, faites tourner le haut de votre corps et tendez votre bras droit vers le haut. Répétez l’exercice avec l’autre bras. C’est un très bon exercice pour le torse, les épaules, les bras et le corps en général."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/pompes_rotation"
        app:layout_constraintTop_toBottomOf="@+id/text_pompes_spider"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/pompes_diamants"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/pompes_diamant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pompes_rotation" />

    <TextView
        android:layout_width="233dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:text="Commencez en position de pompe. Formez un losange avec vos doigts puis abaissez et relevez votre corps. Pensez à toujours gardez le corps dans une ligne."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pompes_diamants"
        app:layout_constraintTop_toBottomOf="@+id/text_pompes_rotation"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>