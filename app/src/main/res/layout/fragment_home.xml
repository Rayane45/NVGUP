<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/image_bras"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="218dp"
        android:src="@drawable/muscle_bras"
        android:visibility="visible" />

    <Button
        android:id="@+id/button_bras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="348dp"
        android:text="Exercices Bras"
        android:fontFamily="@font/android_insomnia_regular"/>

    <ImageView
        android:id="@+id/image_jambes"
        android:layout_width="148dp"
        android:layout_height="122dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="434dp"
        android:src="@drawable/muscle_jambes" />

    <Button
        android:id="@+id/button_jambes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="119dp"
        android:fontFamily="@font/long_fox"
        android:text="Exercices Jambes" />

    <Button
        android:id="@+id/button_retour"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="254dp"
        android:layout_marginBottom="32dp"
        android:textSize="15dp"
        android:text="Return Home"
        android:fontFamily="@font/crochet_pattern_bold"/>

</RelativeLayout>